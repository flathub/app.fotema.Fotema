{
    "name": "glycin-loaders",
    "buildsystem": "meson",
    "config-opts": [
        "-Dglycin-loaders=true",
        "-Dlibglycin=false"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://download.gnome.org/sources/glycin/1.1/glycin-1.1.beta.tar.xz",
            "sha256": "fdaf62ce1bbfcdd677f73283e8a58198d61d3977921c2bb16147cf69291329ca",
            "x-checker-data": {
                "type": "gnome",
                "name": "glycin"
            }
        }
    ],
    "modules": [
        {
            "name": "libde265",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app/lib/libheif-heic",
                "-DENABLE_SDL=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/lib/libheif-heic/bin",
                "/lib/libheif-heic/include",
                "/lib/libheif-heic/lib/cmake",
                "/lib/libheif-heic/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/strukturag/libde265.git",
                    "commit": "17bb8d9fcea62db8cdeb0fc7ef8d15dbd19a22e4",
                    "tag": "v1.0.15",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ]
        },
        {
            "name": "libheif",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DWITH_LIBDE265_PLUGIN=On",
                "-DPLUGIN_DIRECTORY=/app/lib/libheif-heic/lib",
                "-DLIBDE265_INCLUDE_DIR=/app/lib/libheif-heic/include",
                "-DLIBDE265_PKGCONF_LIBRARY_DIRS=/app/lib/libheif-heic/lib",
                "-DWITH_JPEG_ENCODER=OFF",
                "-DWITH_OpenJPEG_ENCODER=OFF",
                "-DWITH_OPENJPH_ENCODER=OFF",
                "-DWITH_X265=OFF",
                "-DWITH_SvtEnc=OFF",
                "-DWITH_SvtEnc_PLUGIN=OFF",
                "-DWITH_AOM_ENCODER=OFF",
                "-DWITH_RAV1E_PLUGIN=OFF",
                "-DWITH_RAV1E=OFF",
                "-DWITH_EXAMPLES=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/strukturag/libheif.git",
                    "commit": "bf35e9eb25af8f2b7917996ad9ba849d922f8d15",
                    "tag": "v1.18.2",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ]
        },
        {
            "name": "libjxl",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DJPEGXL_ENABLE_BENCHMARK:BOOL=OFF",
                "-DJPEGXL_ENABLE_EXAMPLES:BOOL=OFF",
                "-DJPEGXL_ENABLE_FUZZERS:BOOL=OFF",
                "-DJPEGXL_ENABLE_PLUGINS:BOOL=ON",
                "-DJPEGXL_ENABLE_VIEWERS:BOOL=OFF",
                "-DJPEGXL_FORCE_SYSTEM_BROTLI:BOOL=ON",
                "-DJPEGXL_BUNDLE_LIBPNG:BOOL=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libjxl/libjxl.git",
                    "tag": "v0.11.0",
                    "x-checker-data": {
                        "type": "git"
                    },
                    "commit": "4df1e9eccdf86b8df4c0c7c08f529263906f9c4f"
                }
            ]
        }
    ]
}

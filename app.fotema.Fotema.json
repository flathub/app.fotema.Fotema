{
  "id": "app.fotema.Fotema",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable",
    "org.freedesktop.Sdk.Extension.llvm19"
  ],
  "command": "fotema",
  "finish-args": [
    "--device=dri",
    "--share=ipc",
    "--share=network",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--env=RUST_BACKTRACE=0",
    "--env=RUST_LOG=fotema=warn,relm4=warn,glycin=warn"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm19/bin",
    "prepend-ld-library-path": "/usr/lib/sdk/llvm19/lib"
  },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],

    "add-extensions": {
        "app.fotema.Fotema.HEIC": {
            "directory": "lib/libheif-heic",
            "add-ld-path": "lib",
            "bundle": true,
            "autodelete": true
        }
    },

  "modules": [
    "modules/glycin-loaders.json",
    "modules/ffmpeg.json",
    "modules/libshumate.json",
    "modules/opencv.json",
    "modules/libonnxruntime.json",
    {
      "name": "fotema",
      "buildsystem": "meson",
      "builddir": true,
      "run-tests": false,
      "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm19/bin",
        "prepend-ld-library-path": "/usr/lib/sdk/llvm19/lib",
        "env": {
            "OPENCV_INCLUDE_PATHS": "/app/include/opencv4",
            "LIBCLANG_PATH": "/usr/lib/sdk/llvm19/lib",
            "ORT_STRATEGY": "system"
        }
      },
      "config-opts": [
        "-Dprofile=default",
        "-Dsandboxed=true"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/blissd/fotema.git",
          "tag": "v1.19.1",
          "commit": "888764cb458cae77977c4a7e14e2552b77a4eda9"
        },
        "cargo-sources.json"
      ]
    }
  ]
}
